<% content_for :title, "Expenses" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="display-1">Expenses</h1>
    <%= link_to "New expense", new_expense_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="expenses" class="min-w-full">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <th>Name</th>
          <th>Date</th>
          <th>Price</th>
          <th>Description</th>
          <th></th>
        </thead>
        <tbody>
          <% if @expenses.any? %>
            <% @expenses.each do |expense| %>
          <tr>
            <td><%= expense.name %></td>
            <td><%= expense.date %></td>
            <td><span>Yen </span><%= expense.amount %></td>
            <td><%= expense.description %></td>
            <td>
          <%= link_to "Show this expense", expense, class: "btn btn-primary" %></td>
      <% end %>
    </tr>
    </tbody>
    </table>
    <% else %>
      <p class="text-center my-10">No expenses found.</p>
    <% end %>
  </div>
  <%= link_to "Add Expense", expenses_new_path, class: "btn btn-primary" %></td>
</div>
