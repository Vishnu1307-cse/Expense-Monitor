<% content_for :title, "Showing expense" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="display-3">Expense Details</h1>

  <%= render @expense %>

  <%= link_to "Edit this expense", edit_expense_path(@expense), class: "btn btn-primary" %>
  <%= link_to "Back to expenses", expenses_path, class: "btn btn-primary" %>
  <div class="inline-block ml-2">
    <%= button_to "Destroy this expense", @expense, method: :delete, class: "btn btn-danger" %>
  </div>
</div>
