<div>
  <h2 class="display-2">Log In</h2><br>
  <%= form_tag '/login', class: 'container' do %>
    <div class="mb-3">
      <%= label_tag :username, "Username", class: "form-label" %>
      <%= text_field_tag :username, nil, class: "form-control", placeholder: "Enter your username" %>
    </div>
    <div class="mb-3">
      <%= label_tag :password, "Password", class: "form-label" %>
      <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password" %>
    </div>
    <%= submit_tag "Log In", class: "btn btn-primary" %>
    <%= link_to "Create new user", users_new_path, class: "btn btn-primary" %>
  <% end %>
</div>